function _add_to_path() {
    typeset -gU PATH
    for dir; do
        if [[ ! ":$PATH:" == *":$dir:"* ]]; then
            PATH="$dir:$PATH"
        fi
    done
}

_add_to_path "$HOME/.config/cargo/bin" "$HOME/.local/bin" "$HOME/.nimble/bin"

[[ "$XDG_CONFIG_HOME" ]] && _add_to_path "$XDG_CONFIG_HOME/cargo/bin"

unfunction _add_to_path

